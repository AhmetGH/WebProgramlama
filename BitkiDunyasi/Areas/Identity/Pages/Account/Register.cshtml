@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Formu";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Ad">Adınız</label>
                <input asp-for="Input.Ad" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Ad" />
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Soyad">Soyadınız</label>
                <input asp-for="Input.Soyad" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Soyad" />
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Yas">Yasınız</label>
                <input asp-for="Input.Yas" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yas" />
                <span asp-validation-for="Input.Yas" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Password">Şifreniz:</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword">Şifre Tekrar</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre Tekrar" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-4 col-md-offset-2">
        <section>
            
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
